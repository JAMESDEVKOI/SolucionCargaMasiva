{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/apigateway-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "SuperSecretKey123!@#SuperSecretKey123!@#SuperSecretKey123!@#",
    "Issuer": "AuthAPI",
    "Audience": "BulkLoadClients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:5173"
    ]
  },
  "DownstreamServices": {
    "AuthApi": {
      "Url": "http://auth-api:80",
      "Timeout": 30
    }
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "GlobalOptions": {
      "DisableRateLimitHeaders": false,
      "QuotaExceededMessage": "Rate limit exceeded. Please try again later.",
      "HttpStatusCode": 429,
      "ClientIdHeader": "X-ClientId",
      "ClientWhitelist": [],
      "IpWhitelist": [ "127.0.0.1", "::1" ]
    },
    "Policies": [
      {
        "Name": "DefaultPolicy",
        "Endpoint": "*",
        "PermitLimit": 100,
        "Window": 1,
        "WindowUnit": "minutes",
        "QueueLimit": 10
      },
      {
        "Name": "AuthPolicy",
        "Endpoint": "/auth/*",
        "PermitLimit": 10,
        "Window": 1,
        "WindowUnit": "minutes",
        "QueueLimit": 5
      }
    ]
  }
}
